@{
    ViewData["Title"] = "Enter a Movie";
}

<!--Bring in the model-->
@model mission6.Models.MovieResponse

<h1> Enter a movie here! </h1>

<!-- This is the form for creating the movie entry-->

<div>
    <form method="post">

        <div asp-validation-summary="All"></div>

        <label> Movie Category: </label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select> <br />

        <label> Movie Title: </label>
        <input asp-for="Title" /><br />

        <label> Movie Year: </label>
        <input asp-for="Year" /><br />

        <label> Movie Director: </label>
        <input asp-for="Director" /><br />

        <label> Movie Rating: </label>
        <select asp-for="Rating">
            <option value="">Select</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />


        <label> Edited: </label>
        <select asp-for="Edited">
            <option value="false">Select</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />


        <label> Lent to: </label>
        <input asp-for="LentTo" /><br />

        <label> Movie Notes: </label>
        <input asp-for="Notes" /><br />

        <button type="submit">Submit Movie Entry</button>

    </form>
</div>
